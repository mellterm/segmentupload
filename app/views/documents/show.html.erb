<% title "Document" %>

<p>
  <strong>Document Name:</strong>
  <%= @document.document_name %>
</p>
<p>
  <strong>Provider:</strong>
  <%= @document.provider_id %>
</p>
<p>
  <strong>Uploaded By:</strong>
  <%= @document.uploaded_by_id %>
</p>

<% @document.segments.each do |s| %>
  <table cellpadding="0" cellspacing="0" style="border:1px solid #CCC;width:100%">
    <tr> <td>Source Content</td><td colspan="3" style="border:1px solid #eee"><%=s.source_content %></td></tr>
    <tr> <td>Target Content</td><td colspan="3" style="border:1px solid #eee"><%=s.target_content %></td></tr>
    <tr> <td>Properties</td><td colspan="3" style="border:1px solid #eee"><%=s.prop %></td></tr>
    <tr>
      <td  style="border:1px solid #eee" >Creation ID: <%=s.creationid %></td>
      <td style="border:1px solid #eee">Creation Date: <%=s.creationdate %></td>
      <td style="border:1px solid #eee">Change ID: <%=s.changeid %></td>
      <td style="border:1px solid #eee">Change Date: <%=s.changedate %></td>
    </tr>
  </table>
<% end %>

<p>
  <%= link_to "Edit", edit_document_path(@document) %> |
  <%= link_to "Destroy", @document, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", documents_path %>
</p>
